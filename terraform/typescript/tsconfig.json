{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2015", "es2017", "dom", "dom.iterable"],
    "strict": true,
    "noImplicitAny": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "outDir": "dist",
    "plugins": [
      { "name": "tslint-language-service", "ignoreDefinitionFiles": true }
    ]
  }
}
